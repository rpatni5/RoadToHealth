<Window x:Class="RTH.Windows.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RTH.Windows.Views" WindowStyle="None" ResizeMode="NoResize"
        WindowState="Normal" WindowStartupLocation="CenterScreen"
         xmlns:Root="clr-namespace:RTH.Windows.Views" 
        mc:Ignorable="d" Icon="Assets/favicon.ico" 
        Title="SplashWindow" Height="600" Width="800" UseLayoutRounding="True">
    <Grid>
        <TextBlock HorizontalAlignment="Center"                 
                   VerticalAlignment="Top" Margin="0,80" Text="Your health and  wellbeing understood" Foreground="#FF9D9D9E" FontSize="24" />
        <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Margin="0,10" Style="{StaticResource HeaderOffImages}"
                   Stretch="None"
                   Source="/Assets/ic_off_page_header.png"
                   HorizontalAlignment="Center" OpacityMask="Black" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,-30,0">
            <TextBlock Margin="0,30,0,30" Text="Loading" Foreground="{StaticResource ThemeGrayColor}" FontSize="25" />
            <Label Margin="-23,0,-30,10" Template="{StaticResource typingTemplate}" Name="viewTyping" Background="Transparent" VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
</Window>
