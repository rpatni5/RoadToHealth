<Window x:Class="RTH.Windows.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RTH.Windows.Views" WindowStyle="None" ResizeMode="NoResize"
        WindowState="Normal" WindowStartupLocation="CenterScreen"
         xmlns:Root="clr-namespace:RTH.Windows.Views" 
        mc:Ignorable="d" Icon="Assets/favicon.ico" 
        Title="SplashWindow" Height="600" Width="800" UseLayoutRounding="True">
    <Grid>
       
        <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Margin="0,10" Style="{StaticResource HeaderOffImages}"
                   Stretch="None"
                   Source="/Assets/logo-splash.png"
                   HorizontalAlignment="Center" OpacityMask="Black" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,-30,0">
            <TextBlock VerticalAlignment="Center" Text="Loading" Foreground="{StaticResource ThemeGrayColor}" FontSize="25" />
            <Label Margin="0,0,0,20" 
                   Content="." 
                   Width="50"
                   Height="Auto"
                   Name="viewTyping" 
                   Background="Transparent" 
                   HorizontalAlignment="Left"
                   VerticalContentAlignment="Top" 
                   Foreground="{StaticResource ThemeGrayColor}" FontSize="55"/>
        </StackPanel>
    </Grid>
</Window>
